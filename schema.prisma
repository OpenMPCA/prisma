generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Party {
  name        String @id @unique
  description String
  logo        Bytes

  members MemberOfParliament[]
  Leader  Leader?
}

model MemberOfParliament {
  id           Int       @id @default(autoincrement())
  firstName    String
  lastName     String
  constituency String    @unique
  province     String
  picture      Bytes
  fromDate     DateTime
  toDate       DateTime?

  partyName String
  party     Party   @relation(fields: [partyName], references: [name])
  Leader    Leader?
}

model Leader {
  partyName String @unique
  Party     Party  @relation(fields: [partyName], references: [name])

  memberId           Int                @unique
  MemberOfParliament MemberOfParliament @relation(fields: [memberId], references: [id])

  @@id([partyName, memberId])
}
