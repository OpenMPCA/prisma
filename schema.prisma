generator client {
  provider      = "prisma-client-js"
  output        = "./client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Party {
  name        String  @id @unique
  description String?
  logo        Bytes?

  members MemberOfParliament[]
  Leader  Leader?
}

model Politician {
  id                 Int                 @id @default(autoincrement())
  firstName          String
  lastName           String
  MemberOfParliament MemberOfParliament?
}

model MemberOfParliament {
  id           Int        @id
  Politician   Politician @relation(fields: [id], references: [id])
  constituency String     @unique
  province     String
  picture      Bytes?
  fromDate     DateTime
  toDate       DateTime?

  partyName String
  party     Party?  @relation(fields: [partyName], references: [name])
  Leader    Leader?
}

model Leader {
  partyName String @unique
  Party     Party  @relation(fields: [partyName], references: [name])

  memberId           Int                @unique
  MemberOfParliament MemberOfParliament @relation(fields: [memberId], references: [id])

  @@id([partyName, memberId])
}
